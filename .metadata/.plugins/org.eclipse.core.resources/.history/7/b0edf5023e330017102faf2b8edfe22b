package app;

import java.awt.FlowLayout;
import java.awt.GridLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.BorderFactory;
import javax.swing.Box;
import javax.swing.BoxLayout;
import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JTextField;

public class InterfaceAuthentification extends JFrame implements ActionListener {
	static JPanel panelId;
	static JPanel panelMot;
	static JPanel panelButton;
	
	static void createPanelId(){
		panelId = new JPanel();
		JLabel labelId= new JLabel("Identifiant");
		JTextField textFieldId= new JTextField();
		textFieldId.setSize(100, 5);
		
		panelId.setLayout(new BoxLayout(panelId, BoxLayout.X_AXIS));
		//panelId.setLayout(new FlowLayout());
		panelId.add(Box.createVerticalStrut(100));
		panelId.add(labelId);
		panelId.add(textFieldId);
		panelId.add(Box.createVerticalStrut(100));
	}
	
	static void createPanelMot(){
		panelMot = new JPanel();
		JLabel labelMot= new JLabel("Mot de passe");
		JTextField textFieldMot= new JTextField();
		textFieldMot.setSize(100, 5);
		
		panelMot.setLayout(new BoxLayout(panelMot, BoxLayout.X_AXIS));
		panelMot.add(Box.createVerticalStrut(100));
		panelMot.add(labelMot);
		panelMot.add(textFieldMot);
		panelMot.add(Box.createVerticalStrut(100));
	}
	
	static void createPanelButton(){
		panelButton = new JPanel();
		JButton boutonConnexion = new JButton("Connexion");
		boutonConnexion.setSize(10, 10);
		
		panelButton.setLayout(new BoxLayout(panelButton, BoxLayout.X_AXIS));
		panelButton.add(Box.createHorizontalGlue());
		panelButton.add(boutonConnexion);
		panelButton.add(Box.createVerticalStrut(100));
	}
	

	public static void main(String[] args){
		createPanelId();
		createPanelMot();
		createPanelButton();
		JPanel panelContainer = new JPanel();
		panelContainer.setLayout(new BoxLayout(panelContainer, BoxLayout.Y_AXIS));
		panelContainer.add(Box.createHorizontalStrut(50));
		panelContainer.add(panelId);
		panelContainer.add(Box.createHorizontalStrut(50));
		
		panelContainer.add(panelMot);
		panelContainer.add(Box.createHorizontalStrut(50));
		
		panelContainer.add(panelButton);
		
		JFrame frame = new JFrame("Bienvenu");
		//permet de quitter l'app si on ferme la fenetre
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.setSize(600, 500);
		frame.setContentPane(panelContainer);	
		frame.setVisible(true);
		
		
	}
	
	@Override
	public void actionPerformed(ActionEvent e) {
		// TODO Auto-generated method stub
		
	}

}
