package app;
import java.awt.Color;
import java.awt.Dimension;
import java.awt.FlowLayout;
import java.awt.GridLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.BorderFactory;
import javax.swing.Box;
import javax.swing.BoxLayout;
import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JTextField;

public class Interface extends JFrame implements ActionListener {
	
	private static final long serialVersionUID = 1L;
	private JPanel containerPanel;
	private JLabel labelId;
	private JLabel labelMot;
	private JTextField textFieldId;
	private JTextField textFieldMot;
	private JButton boutonConnexion;

	
	public Interface(){
		
		this.setTitle("Bienvenu!");
		this.setSize(600,500);
		
		//creation du conteneur
		containerPanel = new JPanel();
		//choix du Layout:BoxLayout->positionner les elements sur une colonne
		containerPanel.setLayout(new BoxLayout(containerPanel, BoxLayout.Y_AXIS));
		//containerPanel.setLayout(new GridLayout(5,3,10,10));
		
		//choix de la couleur pour la conteneur
		Color couleur1 = new Color(173,214,255);
		containerPanel.setBackground(couleur1);
		
		//instantiation des composants graphique
		
		Color couleur2 = new Color(242,242,242);
		textFieldId = new JTextField();
		textFieldId.setBackground(couleur2);
		textFieldId.setSize(400, 10);
		textFieldMot = new JTextField();
		textFieldMot.setBackground(couleur2);
		textFieldMot.setSize(400, 10);
		labelId = new JLabel("Identifiant");
		labelMot = new JLabel("Mot de passe");
		boutonConnexion = new JButton("Connexion");
		boutonConnexion.setSize(10, 10);
		
		containerPanel.add(labelId);
		containerPanel.add(Box.createRigidArea(new Dimension(0,10)));
		containerPanel.add(textFieldId);
		containerPanel.add(Box.createRigidArea(new Dimension(0,20)));
		containerPanel.add(labelMot);
		containerPanel.add(Box.createRigidArea(new Dimension(0,10)));
		containerPanel.add(textFieldMot);
		containerPanel.add(Box.createRigidArea(new Dimension(0,20)));
		containerPanel.add(boutonConnexion);
		
		
		
		
		//ajouter une bordure vide de taille constante autout de l'ensemble des composants
		containerPanel.setBorder(BorderFactory.createEmptyBorder(10, 10, 10, 10));
		
		//ajouter des ecouteurs sur les boutons pour gerer les evenements
		boutonConnexion.addActionListener(this);
		
		
		//permet de quitter l'app si on ferme la fenetre
		this.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		
		this.setContentPane(containerPanel);
		
		this.setVisible(true);
		
	}
	
	public static void main(String[] args)
	{
		new Interface();
	}

	@Override
	public void actionPerformed(ActionEvent e) {
		// TODO Auto-generated method stub
		
	}


	
	

}
